<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>rusic-theme-competition</title>

    <link href="{{ 'style.css' | stylesheet_url }}" rel="stylesheet" />
    <script type="text/javascript" src="//w.sharethis.com/button/buttons.js"></script>
    <script type="text/javascript">
      stLight.options({
        publisher: "e326261c-7fbe-4a1d-baee-7b2ac62c748b",
        doNotHash: false,
        doNotCopy: true,
        hashAddressBar: false,
        text: "TEST"
      });
    </script>

    <style>
      body { background: {{ space.secondary_color }}; }
      .button { background: {{ space.primary_color }}; }
      input[type=radio]:checked + label:after { background-color: {{ space.primary_color }} !important; }
      .card--image__wrap__content {
        background-image: url({{ space.primary_image }});
        background-color: {{ space.primary_color }};
      }

      {% if space.mobile_primary_image %}
        @media only screen and (max-width: 750px) {
          .card--image__wrap__content {
            background-image: url({{ space.mobile_primary_image }});
          }
        }
      {% endif %}

      {% if space.background_image != blank %}
        @media only screen and (min-width: 750px) {
          .background {
            background-image: url({{ space.background_image }});
            opacity: 0.3;
          }
          .wrapper:before, .wrapper:after,
          .card:before, .card:after { display: none; }
          .card { box-shadow: 0px 0px 5px 3px rgba(50,50,50,0.3); }
        }
      {% endif %}

    </style>
  </head>

  <body class="layout--poster">

    <div class="wrapper">
      <div class="card">
        <div class="card--image">
          <div class="card--image__wrap">
            <div class="card--image__wrap__content"></div>
          </div>
        </div>
        <div class="card--body">
          <div class="card--body__content">
             {{ content_for_layout }}
          </div>
        </div>
      </div>
    </div>

    <div class="background"></div>

    {% if space.ga_code != "" %}
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', '{{ space.ga_code }}', 'auto');
        ga('send', 'pageview');
      </script>
    {% endif %}
    <script src="{{ 'script.js' | javascript_url }}"></script>
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-56c5cb60941da325"></script>
  </body>
</html>
